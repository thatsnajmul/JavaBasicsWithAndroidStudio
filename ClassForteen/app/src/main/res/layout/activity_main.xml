<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="#FFFFFF"
                   android:weightSum="100"
                   >
                   <ImageView
                       android:id="@+id/click_to_show"
                       android:layout_width="70dp"
                       android:layout_height="50dp"
                       android:src="@drawable/ic_menu_black_24dp"
                       android:layout_margin="6dp"
                       android:padding="5dp"
                       android:layout_weight="20"
                       android:clickable="true"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Corona Virous Update"
                       android:textColor="#F61010"
                       android:textSize="30dp"
                       android:background="#FFFFFF"
                       android:padding="2dp"
                       android:layout_margin="8dp"
                       android:layout_weight="80"
                       />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/show_menu"
                   android:layout_width="250dp"
                   android:layout_height="400dp"
                   android:background="#F5E5F8"
                   android:orientation="vertical"
                   android:visibility="gone"
                   >
                   <ImageView
                       android:id="@+id/click_to_gone"
                       android:layout_width="55dp"
                       android:layout_height="38dp"
                       android:src="@drawable/ic_keyboard_backspace_black_24dp"
                       android:clickable="true"
                       />
                   <ImageView
                       android:layout_width="130dp"
                       android:layout_height="90dp"
                       android:src="@drawable/ic_adb_black_24dp"
                       android:layout_gravity="center"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="HOME"
                       android:layout_marginLeft="25dp"
                       android:textStyle="bold"
                       android:textSize="28dp"
                       android:textColor="#000000"
                       android:padding="02dp"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="About Me"
                       android:layout_marginLeft="20dp"
                       android:textStyle="bold"
                       android:textSize="28dp"
                       android:textColor="#000000"
                       android:padding="02dp"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Contact"
                       android:layout_marginLeft="25dp"
                       android:textStyle="bold"
                       android:textSize="25dp"
                       android:textColor="#000000"
                       android:padding="02dp"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Privicy Policy"
                       android:layout_marginLeft="25dp"
                       android:textStyle="bold"
                       android:textSize="24dp"
                       android:textColor="#000000"
                       android:padding="02dp"
                       />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:weightSum="3"
                       android:padding="5dp"
                       android:layout_margin="5dp"
                       >
                       <ImageView
                           android:id="@+id/facebook"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:padding="2dp"
                           android:layout_margin="5dp"
                           android:src="@drawable/facebook"
                           />
                       <ImageView
                           android:id="@+id/twitter"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:padding="2dp"
                           android:layout_margin="5dp"
                           android:src="@drawable/twitter"
                           />
                       <ImageView
                           android:id="@+id/instagram"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:padding="2dp"
                           android:layout_margin="5dp"
                           android:src="@drawable/instagram"
                           />

                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:padding="5dp"
                   android:layout_margin="5dp"
                   >
                   <TextView
                       android:id="@+id/total_cases"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Total Cases"
                       android:textColor="#F61010"
                       android:textSize="25dp"
                       android:background="#D1FDBA"
                       android:padding="2dp"
                       android:layout_margin="5dp"
                       android:gravity="center"
                       android:textStyle="italic"
                       android:clickable="true"
                       />
                   <TextView
                       android:id="@+id/total_deaths"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Total Deaths"
                       android:textColor="#F61010"
                       android:textSize="25dp"
                       android:background="#D1FDBA"
                       android:padding="2dp"
                       android:layout_margin="5dp"
                       android:gravity="center"
                       android:textStyle="italic"
                       android:clickable="true"
                       />
                   <TextView
                       android:id="@+id/new_cases"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="New Cases"
                       android:textColor="#F61010"
                       android:textSize="25dp"
                       android:background="#D1FDBA"
                       android:padding="2dp"
                       android:layout_margin="5dp"
                       android:gravity="center"
                       android:textStyle="italic"
                       android:clickable="true"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"

                   >
                   <TextView
                       android:id="@+id/total_cases_number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="6,767,376"
                       android:textColor="#3A3535"
                       android:textSize="50dp"
                       android:background="#FBFAF8"
                       android:padding="2dp"
                       android:layout_margin="12dp"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:visibility="visible"
                       />
                   <TextView
                       android:id="@+id/total_death_number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="398,698"
                       android:textColor="#3A3535"
                       android:textSize="50dp"
                       android:background="#FBFAF8"
                       android:padding="2dp"
                       android:layout_margin="12dp"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:visibility="gone"
                       />
                   <TextView
                       android:id="@+id/new_cases_number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="+35,977"
                       android:textColor="#3A3535"
                       android:textSize="50dp"
                       android:background="#FBFAF8"
                       android:padding="2dp"
                       android:layout_margin="12dp"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:visibility="gone"
                       />
                   <Button
                       android:id="@+id/animation_show"
                       android:layout_width="match_parent"
                       android:layout_height="60dp"
                       android:layout_gravity="center"
                       android:background="#FFFFFF"
                       android:textColor="#F10A0A"
                       android:textSize="25dp"
                       android:text="Click To Show For Animation"
                       />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/open_Animation"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:visibility="gone"

                   >
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Covid-19 Efected Country"
                       android:textColor="#03FB03"
                       android:layout_margin="12dp"
                       android:textSize="40dp"
                       android:background="#FBFAF8"
                       android:padding="2dp"
                       android:gravity="center"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="1. USA"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="2. Brazil"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="3. Russia"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="4. Spain"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="5. UK"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="6. India"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="7. Italy"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="8. 	Germany"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="9. Peru"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="10. Turkey"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="11. Iran"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="12. France"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="13. Chile"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="14. Mexico"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="15. Saudi Arabia"
                       android:textColor="#3A3535"
                       android:textSize="23dp"
                       android:background="#FBFAF8"
                       android:layout_marginLeft="145dp"
                       android:textStyle="bold"
                       />
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>

     </ScrollView>

</RelativeLayout>